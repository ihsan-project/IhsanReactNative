{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "react",
    "lib": ["es6"],
    "moduleResolution": "node",
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "noEmit": true,
    "strict": true,
    "removeComments": false,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "types.d.ts",
    "./src/**/*.tsx",
    "./src/**/*/.ts",
    "./src/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "__tests__",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
